// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C++",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Wall",
        "-Wextra",
        "-Wconversion",
        "-Werror",
        "-std=c++17",
        "main.cpp",
        "-o",
        "main"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
